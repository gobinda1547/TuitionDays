<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EachTuitionDetailsCardView"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/ShowTuitionNameTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/tuition_name_example"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/ShowTuitionTotalDayTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/ShowTuitionNameTextView"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/tuition_name_example"
            android:textSize="15sp"/>

        <ImageButton
            android:id="@+id/DeleteTuitionNameImageButton"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_delete"
            android:background="@null"
            android:contentDescription="@string/default_content_description" />

    </RelativeLayout>

</android.support.v7.widget.CardView>